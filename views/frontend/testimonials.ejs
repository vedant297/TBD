<% layout('layouts/boilerplate') %>

<%- include('../partials/common_banner', { pageTitle: 'Testimonials' }) %> 

    <!-- Testimonials Area -->
    <section id="testimonials_main_arae" class="section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="section_heading_center">
                        <h2 class="text-custom">What our clients say about us</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <% for( let testimonial of testimonials) { %>

                    <div class="col-lg-4 col-md-6">
                        <div class="all_review_box">
    <div class="all_review_date_area">
        <div class="all_review_date">
            <h5>
                <%= formatDate(testimonial.createTime) %>
            </h5>
        </div>
        <div class="all_review_star">
            <div class="review_star_all">
                <div class="review_star_all">
                    <% if (testimonial.starRating='ONE' ) { %>
                        <i class="fas fa-star"></i>
                        <% } %>
                            <% if (testimonial.starRating='TWO' ) { %>
                                <i class="fas fa-star"></i>
                                <% } %>
                                    <% if (testimonial.starRating='THREE' ) { %>
                                        <i class="fas fa-star"></i>
                                        <% } %>
                                            <% if (testimonial.starRating='FOUR' ) { %>
                                                <i class="fas fa-star"></i>
                                                <% } %>
                                                    <% if (testimonial.starRating='FIVE' ) { %>
                                                        <i class="fas fa-star"></i>
                                                        <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="all_review_text">
        <!-- Placeholder with initials instead of a profile image -->
        <div class="initial-placeholder" style="background-color: <%= randomBGColor() %>;">
            <%= testimonial.reviewer.displayName.split(" ").map(word => word.charAt(0).toUpperCase()).join('') %>
          </div>
        <h4>
            <%= testimonial.reviewer.displayName .split(' ')
                .map(word => word.charAt(0).toUpperCase() + word.slice(1))
                .join(' ') %>
        </h4> 
          <p><%= testimonial.comment %></p>
        </div>
      </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>

    <!--Top tour packages Area -->
    <section id="top_tour_packages" class="section_padding_bottom">
        <div class="container">
            <!-- Section Heading -->
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="section_heading_center">
                        <h2>Top tour packages</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="promotional_tour_slider owl-theme owl-carousel dot_style">

                        <% for( let package of packages) { %>                        
                        <div class="theme_common_box_two">
                            <div class="theme_two_box_img">
                                <a href="/tour-detail/<%= package.destinationDetails._id %>"><img src="/<%= package.photoDetails.URL %>" alt="img" style="height: 180px; width: 271px; "></a>
                                <p><i class="fas fa-map-marker-alt"></i><%= package.destinationDetails.location %>, <%= package.destinationDetails.country %></p>
                                <div class="discount_tab">
                                        <span><% if ( package.destinationDetails.applicableDiscount.amount && package.destinationDetails.applicableDiscount.amount > 0 ) { %> 
                                                            <%= package.destinationDetails.applicableDiscount.amount %> %
                                                                <% } %></span>
                                    </div>
                            </div>
                            <div class="theme_two_box_content">
                                <h4><a href="/tour-detail/<%= package.destinationDetails._id %>"><%= package.destinationDetails.packageName %></a></h4>
                                <p><span class="review_rating"><%= package.destinationDetails.noOfDays %> days <%= package.destinationDetails.noOfDays - 1%> nights</span> 
                                <h3>&#8377;<%= package.destinationDetails.priceStartsFrom %> <span>Price starts from</span></h3>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>